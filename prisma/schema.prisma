  isDeleted Boolean   @default(false)
  deletedAt DateTime?

  createdAt DateTime @default(now())
}

// BookingActivityLog: Represents a log entry for booking activity
/// @group Events
model BookingActivityLog {
  id String @id @default(cuid())

