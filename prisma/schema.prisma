  processedAt DateTime?
  approvedBy  String?
  approvedAt  DateTime?
  declinedAt  DateTime?

  refundAmount Decimal?
  notes        String?

  isDeleted Boolean   @default(false)
  deletedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum CancellationStatus {
  PENDING
  APPROVED
  DECLINED
  CANCELLED
}

enum CancellationSource {
  CUSTOMER
  SUPPORT
  SYSTEM
}

