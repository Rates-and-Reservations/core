# Database
DATABASE_URL="postgresql://username:password@localhost:5432/ratesspot"
DIRECT_URL="postgresql://username:password@localhost:5432/ratesspot"

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-long-and-random
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-also-change-this
REFRESH_TOKEN_EXPIRES_IN=30d

# API Key Configuration
API_KEY_SECRET=your-api-key-secret-for-hashing-merchant-api-keys

# Clerk Authentication (Updated SDK)
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key
CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key

# Payment Processing
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# File Upload
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Service (optional)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@ratesspot.com

# SMS Service (optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/ratesspot.log

# Security
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Webhooks
WEBHOOK_SECRET=your-webhook-secret-for-securing-outgoing-webhooks