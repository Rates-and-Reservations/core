{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "es2021",
      "dom"
    ],
    "module": "ESNext",
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "@/*": [
        "*"
      ],
      "@zod/*": ["generated/zod/*"]
    }
  },
  "exclude": ["node_modules", "dist", "scripts"]
}