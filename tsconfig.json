{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "es2021",
      "dom"
    ],
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@zod/*": ["src/generated/zod/*"]
    }
  },
  "exclude": ["node_modules", "dist", "scripts"]
}